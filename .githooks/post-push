#!/bin/bash

# Git post-push hook for Trigger.dev deployment
# This runs after a successful git push

# Get the current branch name
CURRENT_BRANCH=$(git rev-parse --abbrev-ref HEAD)

echo "üöÄ Post-push hook triggered for branch: $CURRENT_BRANCH"

# Check if we have the required environment variables
if [ -z "$TRIGGER_ACCESS_TOKEN" ]; then
    echo "‚ö†Ô∏è  TRIGGER_ACCESS_TOKEN not set. Skipping deployment."
    echo "   Set it with: export TRIGGER_ACCESS_TOKEN=your_token"
    exit 0
fi

# Deploy based on branch
case $CURRENT_BRANCH in
    "develop")
        echo "üß™ Deploying to Trigger.dev Development environment..."
        npx trigger.dev@latest deploy --env development
        if [ $? -eq 0 ]; then
            echo "‚úÖ Development deployment completed successfully!"
        else
            echo "‚ùå Development deployment failed!"
            exit 1
        fi
        ;;
    "main")
        echo "üöÄ Deploying to Trigger.dev Production environment..."
        npx trigger.dev@latest deploy --env production
        if [ $? -eq 0 ]; then
            echo "‚úÖ Production deployment completed successfully!"
        else
            echo "‚ùå Production deployment failed!"
            exit 1
        fi
        ;;
    *)
        echo "‚ÑπÔ∏è  Branch '$CURRENT_BRANCH' - no deployment configured"
        echo "   Deployments are configured for: develop (dev) and main (prod)"
        ;;
esac

echo "üéâ Post-push hook completed!" 