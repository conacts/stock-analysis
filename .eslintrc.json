{
  "env": {
    "node": true,
    "es2022": true,
    "browser": true
  },
  "extends": ["eslint:recommended", "next/core-web-vitals", "next/typescript"],
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "rules": {
    "no-console": "off",
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": "off",
    "@typescript-eslint/no-explicit-any": "off",
    "no-case-declarations": "off",
    "prefer-const": "off",
    "no-var": "off"
  },
  "ignorePatterns": [
    "dist/**/*",
    "node_modules/**/*",
    "coverage/**/*",
    ".next/**/*",
    "out/**/*",
    "**/*.js"
  ]
}
