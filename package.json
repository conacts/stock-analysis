{
  "name": "ai-trading-system",
  "version": "1.0.0",
  "description": "AI-powered stock analysis and trading system with DeepSeek integration",
  "main": "dist/index.js",
  "scripts": {
    "trigger:dev": "npx trigger.dev@latest dev",
    "trigger:deploy": "npx trigger.dev@latest deploy",
    "trigger:deploy:dev": "npx trigger.dev@latest deploy --env staging",
    "trigger:deploy:prod": "npx trigger.dev@latest deploy --env prod",
    "trigger:whoami": "npx trigger.dev@latest whoami",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "tsx watch src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:fast": "vitest run --testNamePattern='(unit|fast)'",
    "test:unit": "vitest run tests/unit",
    "test:coverage": "vitest run --coverage",
    "lint": "echo 'ESLint temporarily disabled'",
    "lint:fix": "echo 'ESLint temporarily disabled'",
    "format": "prettier --write src/**/*.ts tests/**/*.ts",
    "format:check": "prettier --check src/**/*.ts tests/**/*.ts",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist coverage .nyc_output",
    "db:migrate": "tsx src/database/migrate.ts",
    "db:migrate:latest": "npm run db:migrate 004_enhanced_conversation_threads.sql",
    "db:inspect": "npm run db:migrate inspect",
    "prepare": "husky",
    "ci": "npm run format:check && npm run lint && npm run type-check && npm run test:coverage"
  },
  "dependencies": {
    "@trigger.dev/sdk": "^3.3.17",
    "axios": "^1.7.7",
    "dotenv": "^16.4.5",
    "openai": "^5.3.0",
    "pg": "^8.16.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@trigger.dev/build": "^3.3.17",
    "@types/node": "^20.10.5",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.15.4",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/coverage-v8": "^3.2.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.1",
    "prettier": "^3.1.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "vitest": "^3.2.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "trustedDependencies": [
    "protobufjs"
  ],
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write"
    ],
    "*.{json,md,yaml,yml}": [
      "prettier --write"
    ]
  }
}
